            <h1 class="no-margin" id="logo">
              Blog Raul
            </h1>
          </li>
          <li class ="col-md">
            <%= link_to "Home", root_path %>
          </li>
          <li class ="col-md">
            Design
          </li>
          <li class ="col-md">
            Programming
          </li>
          <li class ="col-md">
            Technology
          </li>
        </ul>
      </nav>
    </header>
    <%= yield %>
